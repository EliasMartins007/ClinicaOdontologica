<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_background_clinica"
    android:orientation="vertical"
    android:padding="8sp">

    <TextView
        android:id="@+id/lbldata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingBottom="2dip"
        android:text="Horarios Dia :"
        android:textColor="#FFF"
        android:textSize="33sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/epecialidade"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingBottom="2dip"
        android:text=" ESPECIALIDADE: "
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Name Label -->
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingBottom="2dip"
        android:text=" Nome" />


    <!-- secretIdentity label -->
    <TextView
        android:id="@+id/lblidentidadeSecreta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=" PACIENTE NOME: "
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />


    <!-- Email label -->
    <TextView
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:text=" Email" />


    <TextView
        android:id="@+id/lblcpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" IDADE :"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" CPF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONFIRMADO"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:layout_weight="1"
                    android:text="AGUARDANDO"
                    android:textColor="#f99" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45sp"
                    android:layout_weight="1"
                    android:text="DESMARCOU"
                    android:textColor="#FFF" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
